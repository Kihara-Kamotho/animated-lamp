<%= form_with(model: [church, Department.new], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="form-group">
    <%= form.label :motto %>
    <%= form.text_field :motto %>
  </div>
  <div class="form-group">
    <%= form.label :picture %>
    <%= form.file_field :picture %>
  </div>

  <%= form.submit %>
<% end %>
