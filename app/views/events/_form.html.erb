<%= form_with(model: @event, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>
  <div class="form-group">
    <%= form.label :time %>
    <%= form.time_field :time %>
  </div>
  <div class="form-group">
    <%= form.label :details %>
    <%= form.text_area :details %>
  </div>
  <div class="form-group">
    <%= form.label :pic %>
    <%= form.file_field :pic %>
  </div>

  <%= form.submit %>
<% end %>
